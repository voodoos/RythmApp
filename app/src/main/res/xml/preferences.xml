<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:dialogTitle="@string/pref_difficulty"
        android:entries="@array/difficulty_levels"
        android:entryValues="@array/difficulty_levels_values"
        android:icon="@drawable/ic_show_chart_black_24dp"
        android:key="pref_difficulty"
        android:summary="Click to choose"
        android:title="@string/pref_difficulty"
        android:defaultValue="@string/pref_difficulte_default" />
    <SwitchPreference
        android:key="pref_rythm"
        android:title="@string/pref_rythm"
        android:summary="Toto"
        android:defaultValue="false" />
    <Preference android:layout="@layout/slider"
        android:dependency="pref_rythm"/>
</PreferenceScreen>